@{
    ViewBag.Title = "Products";
}

<div class="container">
    <h2>Products</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalAdd">Add New Product</button><br /><br />
    <table class="table table-bordered table-hover" id="Products" data-bind="visible: ProductList().length = 0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: ProductList">
            <tr>
                <td data-bind="text: Id "></td>
                <td data-bind="text: Name"></td>
                <td data-bind="text: formatCurrency(Price)"></td>

                <td>
                    <button data-bind="click: $root.edit" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalUpdate">Edit</button>
                    <button data-bind="click: $root.delete">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Product</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input data-bind="value: $root.Name" type="text" class="form-control" id="Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input data-bind="value: $root.Price" type="text" class="form-control" id="Price" placeholder="Price" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button data-bind="click: $root.create" type="button" class="btn btn-primary" id="btnAdd">Add</button>
                <button data-bind="click: $root.reset" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Update Product</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="id">ID</label>
                        <label data-bind="text: Product().Id" id="Id"></label>
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input data-bind="value: Product().Name" type="text" class="form-control" id="Name" />
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input data-bind="value: Product().Price" type="text" class="form-control" id="Price" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button data-bind="click: $root.update" type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                <button data-bind="click: $root.cancel" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




