@{
    ViewBag.Title = "Products";
}

@section scripts {
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout-3.4.2.debug.js"></script>
    <script src="~/Scripts/knockout.validation.js"></script>
    <script src="~/Scripts/product.js"></script>
}

<div class="container">
    <h2>Products</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalAdd">Add New Product</button><br /><br />
    <table class="table table-bordered table-hover" id="products" data-bind="visible: Products().length > 0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: Products">
            <tr>
                <td data-bind="text: Id"></td>
                <td data-bind="text: Name"></td>
                <td data-bind="text: formatCurrency(Price)"></td>

                <td>
                    <button data-bind="click: $root.edit">Edit</button>
                    <button data-bind="click: $root.delete">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Product</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input data-bind="value: $root.Name" type="text" class="form-control" id="Name" />
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input data-bind="value: $root.Price" type="text" class="form-control" id="Price" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button data-bind="click: $root.create" type="button" class="btn btn-primary" id="btnAdd">Add</button>
                <button @*data-bind="click: $root.reset"*@ type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Update Product</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="id">ID</label>
                        <label data-bind="text: $root.Id" id="IdUpdate"></label>
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input data-bind="value: $root.Name" type="text" class="form-control" id="NameUpdate" />
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input data-bind="value: $root.Price" type="text" class="form-control" id="PriceUpdate" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button data-bind="click: $root.update" type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                <button data-bind="click: $root.reset" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
